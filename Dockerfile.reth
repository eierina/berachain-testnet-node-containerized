FROM ghcr.io/paradigmxyz/reth:v1.1.5

WORKDIR /app

# Copy quickstart scripts
COPY env.sh fetch-berachain-params.sh setup-reth.sh run-reth.sh /app/

# Make scripts executable
RUN chmod +x /app/*.sh

# Copy and set entrypoint script
COPY entrypoint-reth.sh /app/entrypoint.sh
RUN chmod +x /app/entrypoint.sh

ENTRYPOINT ["/app/entrypoint.sh"]